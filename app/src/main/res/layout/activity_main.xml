<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:elevation="2dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/light_status_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/light_status_text"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="17sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/current_light_textview"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/max_light_textview"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/max_light_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>